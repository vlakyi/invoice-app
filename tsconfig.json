{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*",
    "@types/*.ts",
    "tests/*"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}