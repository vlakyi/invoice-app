{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".json"
        ]
      }
    }
  },
  "extends": [
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "plugins": [
    "jsx-a11y",
    "react",
    "prettier",
    "jest"
  ],
  "rules": {
    "semi": 1,
    "quotes": [
      "warn",
      "single"
    ],
    "import/prefer-default-export": "off",
    "react/jsx-indent": [
      "error",
      2
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "no-console": "warn",
    "react/prop-types": [
      2,
      {
        "ignore": [
          "history"
        ]
      }
    ],
    "jsx-a11y/label-has-associated-control": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "react/no-set-state": "off",
    "prettier/prettier": [
      "error"
    ],
    "react/jsx-props-no-spreading": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "prefer-promise-reject-errors": "off",
    "camelcase": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "globals": {
    "JSX": true,
    "window": true,
    "document": true
  },
  "env": {
    "jest/globals": true,
    "browser": true
  }
}